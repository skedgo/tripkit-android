<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

    <variable
      name="viewModel"
      type="skedgo.tripkit.demo.a2btrips.TripDetailsViewModel" />

    <import type="me.tatarka.bindingcollectionadapter2.LayoutManagers" />
  </data>

  <android.support.design.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="skedgo.tripkit.demo.a2btrips.TripDetailsActivity">

    <fragment
      android:id="@+id/mapFragment"
      class="com.google.android.gms.maps.SupportMapFragment"
      android:layout_width="match_parent"
      android:layout_height="match_parent" />

    <android.support.v7.widget.CardView
      android:id="@+id/bottomSheet"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/cardview_light_background"
      android:theme="@style/ThemeOverlay.AppCompat.Light"
      app:layout_behavior="@string/bottom_sheet_behavior">

      <android.support.v7.widget.RecyclerView
        android:id="@+id/segmentList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:itemBinding="@{viewModel.segmentBinding}"
        app:items="@{viewModel.tripSegments}"
        app:layoutManager="@{LayoutManagers.linear()}" />

    </android.support.v7.widget.CardView>

  </android.support.design.widget.CoordinatorLayout>
</layout>
