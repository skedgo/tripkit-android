<?xml version="1.0" encoding="utf-8"?>
<com.skedgo.android.tripkit.booking.ui.view.TwoLineFieldView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="?attr/selectableItemBackground"
  android:paddingLeft="@dimen/spacing_normal"
  android:paddingRight="@dimen/spacing_normal"
  android:paddingTop="14dp">

  <ImageView
    android:id="@+id/imageView"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_marginRight="@dimen/spacing_normal"
    android:visibility="gone" />

  <TextView
    android:id="@+id/titleView"
    style="@style/TextStyleTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@id/imageView"
    tools:text="Title" />

  <TextView
    android:id="@+id/valueView"
    style="@style/TextStyleValue"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/titleView"
    android:layout_toRightOf="@id/imageView"
    tools:text="Value" />

  <View
    android:id="@+id/dividerView"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_below="@id/valueView"
    android:layout_gravity="bottom"
    android:layout_marginTop="14dp"
    android:background="@color/v4_booking_divider"
    android:visibility="gone" />

</com.skedgo.android.tripkit.booking.ui.view.TwoLineFieldView>